<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
  <item android:id="@android:id/background">
    <shape>
      <corners android:radius="1dip" />
      <gradient
        android:angle="270"
        android:centerColor="#b0b3b6"
        android:centerY="0.5"
        android:endColor="#b0b3b6"
        android:startColor="#b0b3b6" />
    </shape>
  </item>
  <item android:id="@android:id/progress">
    <clip>
      <shape>
        <corners android:radius="1dip" />
          <gradient
            android:angle="0"
            android:endColor="#a51842"
            android:startColor="#a51842" />
      </shape>
    </clip>
  </item>
</layer-list>